<style type="text/css">
	#crear_boton{
		margin-bottom: 20px;
	}

	#btn{

    position: relative;
    left: 70px;
    bottom: 37px;
	}
</style>
<div class="container" id="crear_boton">
	<%= link_to "Crear", new_article_path, class:"btn btn-outline-primary btn-lg"%>
</div>
<div class="container">
	<div class="row">
		<%@articles.each do |article| %>
		  <div class="col-sm-4">
		    <div class="card">
		      <div class="card-body">
		        <h5 class="card-title"><%= link_to article.name , article%></h5>
		        <p class="card-text"><%= article.brand%></p>
							<p>	Precio $<%= article.price%></p>
							<p> Unidades <%= article.quantity%></p>
		       		<%= link_to "Editar", edit_article_path(article), class:"btn btn-outline-primary"%>
							<%= button_to "Eliminar", article, method: :delete, class:"btn btn-outline-danger", id: "btn" %>
		      </div>
		    </div>
		  </div>
		<br>
		<%end%>
	</div>
</div>
