<h2 class="text-center m-5">Iniciar Sesion</h2>
<div class="col-8 offset-2 col-sm-6 offset-sm-3">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email , "Correo Electronico" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: 'form-control m-2'%>
    </div>

    <div class="field">
      <%= f.label :password, "ContraseÃ±a"%><br />
      <%= f.password_field :password, autocomplete: "current-password" , class: 'form-control m-2' %>
    </div>

    <% if devise_mapping.rememberable? %>
    <div class="field">
        <%= f.check_box :remember_me , class: 'm-2'%>
        <%= f.label :remember_me %>
    </div>
    <% end %>

  <div class="action">
      <%= f.submit "Ingresar", class: "btn btn-primary m-2"%>
  </div>
  <% end %>

    <%= render "devise/shared/links", class: "m-2" %>
</div>
