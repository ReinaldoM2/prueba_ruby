<h2 class="text-center m-5">Registrarse</h2>
<div class="col-8 offset-2 col-sm-6 offset-sm-3">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, "Correo Electronico" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email"  ,class: 'form-control m-2' %>
    </div>

    <div class="field">
      <%= f.label :password , "ContaseÃ±a"%>
      <% if @minimum_password_length %>
      <em>(Minimo <%= @minimum_password_length %> Caracteres  )</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" , class: 'form-control m-2' %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation , "Confirmar ContaseÃ±a"%><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: 'form-control m-2'%>
    </div>

    <div class="actions">
      <%= f.submit "Registrar",  class:'btn btn-primary form-control m-2' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
